<Window x:Class="ChatClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient.Views"
        mc:Ignorable="d"
        Title="Chat" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Lista poruka -->
        <ListBox ItemsSource="{Binding Messages}" />

        <!-- Unos poruke -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <TextBox Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}" Width="280" KeyDown="OnKeyDownSend" />
            <Button Content="Send" Command="{Binding SendCommand}" Width="80" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
