<Window x:Class="ChatClient.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#f0f0f0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="20">
            <Label Content="Unesite vaš username:" 
               HorizontalAlignment="Center" 
               FontSize="18" 
               FontWeight="Bold" 
               Margin="0,0,0,10"/>

            <TextBox x:Name="UsernameTextBox" 
                 Height="30" 
                 FontSize="16" 
                 Margin="0,0,0,20"/>

            <Button Content="Uloguj se" 
                Width="120" 
                Height="35" 
                FontSize="16" 
                HorizontalAlignment="Center"
                Background="#007ACC" 
                Foreground="White" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
